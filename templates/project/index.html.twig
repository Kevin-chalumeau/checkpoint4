{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Localisation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.date ? project.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ project.localisation }}</td>
                <td>
                    {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                    {% endif %}
                    {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('project_new') }}">Create new</a>
    {% endif %}
{% endblock %}
